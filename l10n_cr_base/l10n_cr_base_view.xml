<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
	<!-- Add ID Number to res.partner form -->
	<record model="ir.ui.view" id="ccorp_view_partner_form_inherit_id_num">
		<field name="name">ccorp_view_partner_form_inherit_id_num</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<field name="name" position="after">
				<field name="id_number"/>
			</field>
		</field>
	</record>
	<!-- Add ID Number to res.partner tree -->
	<record model="ir.ui.view" id="ccorp_view_partner_tree_inherit_id_num">
		<field name="name">ccorp_view_partner_tree_inherit_id_num</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_tree"/>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<field name="name" position="after">
				<field name="id_number"/>
			</field>
		</field>
	</record>
	
	<!-- Add Prefix and Sufix symbol fields to res.currency form -->
	<record model="res.currency" id="ccorp_view_currency_form_inherit_symbol">
		<field name="name">ccorp_view_currency_form_inherit_symbol</field>
		<field name="model">res.currency</field>
		<field name="inherit_id" ref="res.view_currency_form"/>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<field name="active" position="replace">
				<field name="sufix_symbol"/>
				<field name="prefix_symbol"/>
				<field name="active"/>
			</field>
		</field>
	</record>
    </data>
</openerp>
