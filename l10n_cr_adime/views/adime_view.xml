<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
        <record id="view_adime_report_filter" model="ir.ui.view">
            <field name="name">adime.report.select</field>
            <field name="model">adime.report</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Analisis de Adime">
                    <field name="name"/>
                    <field name="start"/>
                    <field name="end"/>
                    <newline/>
                    <group expand="0" string="Group By..." groups="base.group_extended">
                        <filter string="State" icon="terp-stock_effects-object-colorize"  context="{'group_by':'state'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Date" icon="terp-stock_effects-object-colorize"  context="{'group_by':'create_date'}"/>
                    </group>
              </search>
            </field>
        </record>

        <record id="view_adime_report_form" model="ir.ui.view">
            <field name="name">adime.report.form</field>
            <field name="model">adime.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analisis de Adime">
                    <group col="6" colspan="4">
                        <field name="name"/>
                        <field name="create_date"/>
                        <field name="total"/>
                        <field name="start"/>
                        <field name="end"/>

                    </group>
                    <notebook>
                        <page string="Facturas Pagadas">

                                <field name="adime_line" nolabel="1" >
                                    <tree>
                                        <field name="inv_date"/>
                                        <field name="inv_number"/>
                                        <field name="partner_id" />
                                        <field name="date_due"/>
                                        <field name="currency_id"/>
                                        <field name="subtotal" sum="Subtotal"/>
                                        <field name="adime_subtotal" sum="adime"/>
                                        <field name="inv_state"/>
                                    </tree>
                                </field>

                        </page>

                    </notebook>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_adime_report_tree">
            <field name="name">adime.report.tree</field>
            <field name="model">adime.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Analisis de Adime">
                    <field name="name"/>
                    <field name="start"/>
                    <field name="end"/>
                    <field name="total" sum="Total Adime"/>
                    <field name="create_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_adime_report">
            <field name="name">Analisis de Adime</field>
            <field name="res_model">adime.report</field>
            <field name="view_type">form</field>
        </record>

        <menuitem id="adime_report" name="Analisis de Adime" parent="account.menu_finance" groups="base.group_sale_manager"/>
        <menuitem
            id="menu_adime_report"
            name="Analisis de Adime"
            groups="base.group_sale_manager"
            parent="adime_report"
            action="action_adime_report"
            sequence="20"
        />
</data>
</openerp>
