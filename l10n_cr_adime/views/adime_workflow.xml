<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="wkf_adime" model="workflow">
            <field name="name">adime.report.basic</field>
            <field name="osv">adime.report</field>
            <field name="on_create">True</field>
        </record>

        <record id="adime_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_adime"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="action">write({'state':'draft'})</field>
            <field name="kind">function</field>
        </record>

        <record id="adime_act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf_adime"/>
            <field name="name">done</field>
            <field name="action">action_set_adime_state()</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
        </record>

        <record id="adime_act_confirmed" model="workflow.activity">
            <field name="wkf_id" ref="wkf_adime"/>
            <field name="name">confirm</field>
            <field name="action">write({'state':'confirmed'})</field>
            <field name="kind">function</field>
        </record>

        <record id="adime_act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf_adime"/>
            <field name="name">cancel</field>
            <field name="action">write({'state':'cancel'})</field>
            <field name="kind">function</field>
        </record>

        <record id="adime_t2" model="workflow.transition">
            <field name="act_from" ref="adime_act_draft"/>
            <field name="act_to" ref="adime_act_confirmed"/>
            <field name="signal">adime_approve</field>
        </record>

        <record id="adime_t7" model="workflow.transition">
            <field name="act_from" ref="adime_act_confirmed"/>
            <field name="act_to" ref="adime_act_done"/>
            <field name="signal">adime_confirm</field>
        </record>

        <record id="adime_t8" model="workflow.transition">
            <field name="act_from" ref="adime_act_confirmed"/>
            <field name="act_to" ref="adime_act_cancel"/>
            <field name="signal">adime_cancel</field>
        </record>

        <record id="adime_t9" model="workflow.transition">
            <field name="act_from" ref="adime_act_cancel"/>
            <field name="act_to" ref="adime_act_draft"/>
            <field name="signal">adime_draft</field>
        </record>
    </data>
</openerp>
