<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Paper Format-->
        <record id="paperformat_LetterPortrait_Adime" model="report.paperformat">
            <field name="name">Letter_Project</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">50</field>
            <field name="dpi">100</field>
        </record>
        <report 
            id="report_adime"
            string="ADIME Report"
            model="adime.report" 
            report_type="qweb-pdf"
            file="report_adime_pdf" 
            name="l10n_cr_adime.report_adime_pdf" 
        />
        <record id="l10n_cr_adime.report_adime" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_LetterPortrait_Adime"/>
        </record>
    </data>
</openerp>