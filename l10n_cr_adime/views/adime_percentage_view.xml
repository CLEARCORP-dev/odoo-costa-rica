<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record id="view_adime_percentage_search" model="ir.ui.view">
            <field name="name">Adime Percentage Search</field>
            <field name="model">l10n.cr.adime.percentage</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Adime Percentage">
                    <field name="name"/>
                    <field name="percentage"/>
              </search>
            </field>
        </record>

        <record id="view_adime_percentage_form" model="ir.ui.view">
            <field name="name">Adime Percentage Form</field>
            <field name="model">l10n.cr.adime.percentage</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="percentage"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_adime_assigned_tree" model="ir.ui.view">
            <field name="name">adime.assigned.tree</field>
            <field name="model">l10n.cr.adime.percentage</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
