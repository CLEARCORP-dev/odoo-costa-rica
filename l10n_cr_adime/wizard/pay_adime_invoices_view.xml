<openerp>
    <data>
        <record id="view_pay_adime_invoices_form" model="ir.ui.view">
            <field name="name">Pay Adime Invoices Form</field>
            <field name="model">l10n.cr.adime.pay.invoices.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Pay ADIME Invoices">
                    <p class="oe_grey">
                        Once invoices are paid, you will not be able
                        to modify them.
                    </p>
                    <footer>
                        <button string="Pay Invoices" name="invoice_pay" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>