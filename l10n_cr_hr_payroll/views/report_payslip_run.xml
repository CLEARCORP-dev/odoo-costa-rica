<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="report_payslip_run">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div align="center">
                            <t t-foreach="docs" t-as="batch"> 
                                <h3>Payslip Batches</h3>
                                <h3>
                                    <span t-field="batch.name" />
                                </h3>
                                <h3>from <span t-field="batch.date_start" /> to <span t-field="batch.date_end" /></h3>
                                <t t-set="data_dict" t-value="get_payslips_by_department(batch)" />
                                <t t-foreach="data_dict.keys()" t-as="department_id">
                                    <t t-set="department_data" t-value="data_dict[department_id]" />
                                    <t t-set="department" t-value="department_data[0]" />
                                    <t t-set="payslips" t-value="department_data[1]" />
                                    <h4 align="left"> Department: <span t-field="department.name" /></h4>
                                    <table class="table table-condensed">
                                        <thead>
                                            <tr>
                                                <th>ID card</th>
                                                <th>Name</th>
                                                <th>Bank account</th>
                                                <th>Nrm Hrs</th>
                                                <th>Ext Hrs</th>
                                                <th>Base</th>
                                                <th>Extra</th>
                                                <th>Gross</th>
                                                <th>Deduct.CCSS/BP</th>
                                                <th>Bonuses</th>
                                                <th>Rent</th>
                                                <th>Net</th>
                                                <th>Paid</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="payslips" t-as="payslip">
                                                <td name="employee">
                                                    <span t-field="payslip.employee_id" />
                                                </td>
                                                <td name="identification">
                                                    <span t-field="payslip.employee_id.identification_id" />
                                                </td>
                                                <td name="bank_account">
                                                    <t t-if="payslip.employee_id.bank_account_id" >
                                                        <span t-field="payslip.employee_id.bank_account_id.acc_number" />
                                                    </t>
                                                </td>
                                                <td name="HN">
                                                    <span t-esc="formatLang(get_worked_days_hours(payslip, code='HN'), dp='Account')" />
                                                </td>
                                                <td name="HE">
                                                    <span t-esc="formatLang(get_worked_days_hours(payslip, code='HE'), dp='Account')" />
                                                </td>
                                                <td name="BASE">
                                                    <span t-esc="formatLang(get_line_total(payslip, code='BASE'), dp='Account')" />
                                                </td>
                                                <td name="EXT">
                                                    <span t-esc="formatLang(get_line_total_group(payslip, code=['EXT','EXT-FE']), dp='Account')" />
                                                </td>
                                                <td>
                                                    <span t-esc="formatLang(get_line_total(payslip, code='BRUTO'), dp='Account')" />
                                                </td>
                                                <td>
                                                    <span t-esc="formatLang(get_line_total_group(payslip, code=['CCSS-EMP','CCSS-EMP-PEN','Banco Popular-EMP','CCSS-IVM','CCSS-SEM']), dp='Account')" />
                                                </td>
                                                <td>
                                                    <span t-esc="formatLang(get_line_total(payslip, code='BON'), dp='Account')" />
                                                </td>
                                                <td>
                                                    <span t-esc="formatLang(get_line_total(payslip, code='RENTA'), dp='Account')" />
                                                </td>
                                                <td>
                                                    <span t-esc="formatLang(get_line_total(payslip, code='NETO'), dp='Account')" />
                                                </td>
                                                <td>
                                                    <span t-esc="formatLang(get_line_total(payslip, code='DEVENGADO'), dp='Account')" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
     </data>
 </openerp>